<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.foureyes.moai.backend.domain.user.repository.UserMapper">

    <select id="selectByEmail" parameterType="string" resultType="com.foureyes.moai.backend.domain.user.entity.User">
        SELECT id, email, password, name
        FROM user
        WHERE email = #{email}
    </select>

    <insert id="insertUser" parameterType="com.foureyes.moai.backend.domain.user.entity.User">
        INSERT INTO user(email, password, name)
        VALUES (#{email}, #{password}, #{name});
    </insert>

</mapper>
