<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.foureyes.moai.backend.domain.user.repository.UserMapper">

    <insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (email, password, name, provider_type, refresh_token, created_at)
        VALUES (#{email}, #{password}, #{name}, #{providerType}, #{refreshToken}, NOW())
    </insert>

    <select id="findByEmail" resultType="User">
        SELECT * FROM users WHERE email = #{email}
    </select>

    <update id="updateRefreshToken">
        UPDATE users
        SET refresh_token = #{refreshToken}
        WHERE id = #{userId}
    </update>

    <select id="findById" resultType="User">
        SELECT * FROM users WHERE id = #{id}
    </select>
</mapper>
